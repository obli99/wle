{
    "manifest_version": 2,
    "name": "Price Notifier",
    "version": "1.0",

    "description": "Notifies price changes",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [{
        "matches": ["*://www.amazon.in/*"],
        "js": ["script.js"]
    }],
    
    "permissions" : [
        "tabs",
        "storage"
    ]


}

