{
    "manifest_version": 2,
    "name": "Price Notifier Extension",
    "version": "1.0",

    "description": "Notifies price change in each item",

    "browser_action": {
        "default_icon": "assets/images/icon.png",
        "default_popup": "index.html"
    },

    "content_scripts": [{
        "matches": ["*://www.amazon.in/*"],
        "js": ["assets/js/script.js","assets/js/script2.js","assets/js/config.js"]
    }],
	
    "permissions": [
        "tabs",
        "storage",
        "activeTab"
    ],
    
    "content_security_policy": "script-src 'self' https://www.gstatic.com/firebasejs/7.21.1/firebase-app.js https://www.gstatic.com/firebasejs/7.6.1/firebase-auth.js https://www.gstatic.com/firebasejs/7.6.1/firebase-database.js; object-src 'self'"

}