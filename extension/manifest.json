{
    "manifest_version": 2,
    "name": "Price Notifier Extension",
    "version": "1.0",

    "description": "Notifies price change in each item",

    "browser_action": {
        "default_icon": "assets/images/icon.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [{
        "matches": ["*://www.amazon.in/*"],
        "js": ["assets/js/script.js"]
    }],

    "permissions": [
        "tabs",
        "storage",
        "activeTab"
    ]
}